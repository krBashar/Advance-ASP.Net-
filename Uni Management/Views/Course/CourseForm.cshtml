


<p class="text-danger">
    @Html.ValidationSummary()
</p>

<h2>University Info</h2>
<form method="post" action="">
    <input type="text" value="@Model.CourseCode" placeholder="CourseCode" class="form-control" name="CourseCode" />
    <br />
    <span class="text-danger">@Html.ValidationMessage("CourseCode")</span>

    <input type="text" value="@Model.Name" placeholder="Name" class="form-control" name="Name" />
    <br />
    <span class="text-danger">@Html.ValidationMessage("Name")</span>

    <input type="text" value="@Model.Credit" placeholder="Credit" class="form-control" name="Credit" />
    <br />
    <span class="text-danger">@Html.ValidationMessage("Credit")</span>

    <input type="submit" value="SignUp" class="btn btn-danger" />
</form>

