



<p class="text-danger">
    @Html.ValidationSummary()
</p>

<h2>Student Info</h2>
<form method="post" action="">

    <input type="text" value="@Model.Name" placeholder="Name" class="form-control" name="Name" />
    <br />
    <span class="text-danger">@Html.ValidationMessage("Name")</span>


    <input type="text" value="@Model.Address" placeholder="Address" class="form-control" name="Address" />
    <br />
    <span class="text-danger">@Html.ValidationMessage("Address")</span>


    <input type="text" value="@Model.Cgpa" placeholder="Cgpa" class="form-control" name="Cgpa" />
    <br />
    <span class="text-danger">@Html.ValidationMessage("Cgpa")</span>

    <input type="submit" value="SignUp" class="btn btn-danger" />
</form>
